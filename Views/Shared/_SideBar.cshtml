<ejs-sidebar id="sidebar" width="290px" enableDock dockSize="100px"
            target=".dock-target" enableGestures="false">
    <e-content-template>

        <div class="logo-wrapper">
            <div class="app-logo">
                <img src="~/logo.png" />
            </div>
            <div class="w-100"></div>
            <i id="sidebar-toggler" class="fa-solid"></i>
        </div>

        <div class="profile-wrapper">
            <img class="profile-pic" src="~/profile.jpg" />
            <div class="titles d-flex flex-column ps-3">
                <h6 class="mb-0">FIX-IT ERM</h6>
                <span class="text-muted">Administration</span>
            </div>
        </div>

        <ejs-menu id="menu"
                  items="menuItems"
                  orientation="Vertical"
                  hamburgerMode></ejs-menu>
    </e-content-template>
</ejs-sidebar>

<script>
   document.addEventListener('DOMContentLoaded', function() {
    const dockBar = document.getElementById('sidebar').ej2_instances[0];
    const mainContent = document.querySelector('.main-content');

    document.getElementById('sidebar-toggler').onclick = function() {
        dockBar.toggle();
        adjustLayout();
    };

    function adjustLayout() {
        if (dockBar.element.classList.contains('e-close')) {
            // When the sidebar is closed, adjust the width and margins of the main content
            mainContent.style.marginLeft = '0';
            mainContent.style.marginRight = '0';
            mainContent.style.width = '100%';
        } else {
            // When the sidebar is open, reset the width and margins of the main content
            mainContent.style.marginLeft = '290px'; // Adjust this width accordingly
            mainContent.style.marginRight = '0px'; // Adjust this value according to your needs
            mainContent.style.width = `calc(100% - ${parseInt(mainContent.style.marginLeft) + parseInt(mainContent.style.marginRight)}px)`;
        }
    }
});
</script>